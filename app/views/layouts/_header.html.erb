<div class="">
		<header>
			<nav class="navbar navbar-default navbar-static-top">
				<div class="container-fluid">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed navbar-header-form-btn" data-toggle="collapse" data-target="#navbar-1" aria-expanded="false">
							<span class="sr-only">Menu</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
							<%= link_to (image_tag("logo 2.0.png", class: "navbar-header-img navbar-header-img", height: "50")), root_path, class: "navbar-brand" %>
					</div>

					<div class="collapse navbar-collapse navbar-collapse-correction" id="navbar-1">
						<% if logged_in? %>
							<div class="row">
								<div class="col-xs-5 col-xs-offset-1 col-sm-4 col-sm-offset- col-md-5 col-md-offset-1 col-xl-5 col-xl-offset-1">
									<ul class="nav navbar-nav navbar-header-ul header-ul btn-full-width text-center full-height">
										<li><%= link_to "Dashboard", '#', class: "header-ul" %></li>
										<li><%= link_to "Actividades", '#', class: "header-ul" %></li>
										<li><%= link_to "Contacto", '#', class: "header-ul" %></li>
								    </ul>
								</div>
								<div class="col-xs-2 col-xs-offset-1 col-sm-3 col-sm-offset-0 col-md-2 col-md-offset-1 col-xl-2 col-xl-offset-1">
									<ul class="nav navbar-nav navbar-header-ul header-ul btn-full-width text-center full-height">
										<li class="dropdown header-ul">
								            <a href="#" class="dropdown-toggle align-right" data-toggle="dropdown">
								              <%= @user.first_name %> <%= @user.last_name %> <b class="caret"></b>
								            </a>
								            <ul class="dropdown-menu">
								              <li><%= link_to "Profile", current_user %></li>
								              <li><%= link_to "Settings", '#' %></li>
								              <li class="divider"></li>
								              <li>
								                <%= link_to "Log out", logout_path, method: "delete" %>
								              </li>
								            </ul>
								        </li>
									</ul>
								</div>

							</div>
						<% else %>

							<%= form_for(:session, url: login_path, :html => {:class => "navbar-form navbar-right navbar-header-form"}) do |f| %>
								<div class="form-group">
							      <%= f.email_field :email, class: 'form-control form-control-correction input-sm', placeholder: 'Email' %>
								</div>
								<div class="form-group">
							      <%= f.password_field :password, class: 'form-control form-control-correction input-sm', placeholder: 'Password' %>
								</div>
							      <%= f.submit "Log in", class: "btn btn-default navbar-btn btn-sm navbar-form-btn btn-correction" %>
							<% end %>
						<% end %>

					</div>
				</div>
			</nav>
		</header>
	</div>