<% provide(:title, "Sign Up") %>
<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
				<div class="jumbotron">
					<div class="row">
						<div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
							<h2>Registrate en Taza</h2>
								<%= form_for(@user) do |f| %>
									<%= render 'shared/error_messages' %>

									<div class="form-group">
								      <%= f.label :first_name, "Nombre" %>
								      <%= f.text_field :first_name , class: 'form-control' %>
									</div>
									<div class="form-group">
								      <%= f.label :last_name, "Apellido" %>
								      <%= f.text_field :last_name , class: 'form-control' %>
									</div>
									<div class="form-group">
								      <%= f.label :email, "Email" %>
								      <%= f.email_field :email , class: 'form-control' %>
									</div>
									<div class="form-group">
								      <%= f.label :password, "ContraseÃ±a" %>
								      <%= f.password_field :password , class: 'form-control' %>
									</div>
									<div class="form-group">
								      <%= f.label :password_confirmation, "Confirmar ContraseÃ±a" %>
								      <%= f.password_field :password_confirmation , class: 'form-control' %>
									</div>
									
							      <%= f.submit "Submit", class: "btn btn-default btn-lg btn-orange btn-block" %>
								<% end %>
								
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
